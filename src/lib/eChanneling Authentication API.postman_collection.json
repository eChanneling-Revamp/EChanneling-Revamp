				{
					"name": "Login with Email/Password",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.collectionVariables.set(\"token\", jsonData.token);",
									"        console.log(\"Token saved to collection variable\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
